# SmartWealth AI - Azure VM Deployment Configuration
# Copy this file to .env and update the values for your Azure VM

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=5001
FLASK_DEBUG=false
HOST=0.0.0.0

# =============================================================================
# AZURE VM DEPLOYMENT
# =============================================================================
# Replace with your actual Azure VM URL
AZURE_VM_URL=http://your-azure-vm-ip:5173
# Alternative: If you have a domain name
# AZURE_VM_URL=https://your-domain.com

# Frontend origins for CORS
FRONTEND_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://your-azure-vm-ip:5173

# =============================================================================
# LLM CONFIGURATION (Ollama)
# =============================================================================
LLM_MODE=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3:latest
OLLAMA_TIMEOUT=30

# =============================================================================
# DATABRICKS CONFIGURATION
# =============================================================================
DATABRICKS_HOST=your-databricks-host
DATABRICKS_TOKEN=your-databricks-token
DATABRICKS_WAREHOUSE_ID=your-warehouse-id

# =============================================================================
# WEB SEARCH CONFIGURATION
# =============================================================================
# Google Custom Search API (Recommended)
SEARCH_API_KEY=your_google_custom_search_api_key
SEARCH_ENGINE_ID=your_google_custom_search_engine_id
SEARCH_PROVIDER=google

# Alternative: Bing Search API
# BING_SEARCH_KEY=your_bing_search_api_key
# SEARCH_PROVIDER=bing

# Alternative: SerpAPI
# SERPAPI_KEY=your_serpapi_key
# SEARCH_PROVIDER=serpapi

# =============================================================================
# MOCK DATA PATHS (for development/fallback)
# =============================================================================
MOCK_SCORES_PATH=mock_data/scores_sample.json
MOCK_PROFILES_PATH=mock_data/nyse_profiles_sample.json
MOCK_EARNINGS_PATH=mock_data/earnings_sample.json
MOCK_VENDORS_PATH=mock_data/vendors_sample.json

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Rate limiting (requests per minute)
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60

# Session timeout (seconds)
SESSION_TIMEOUT=300

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=app.log

# =============================================================================
# AZURE SPECIFIC CONFIGURATION
# =============================================================================
# Azure VM specific settings
AZURE_VM_IP=your-azure-vm-ip
AZURE_VM_PORT=5001
AZURE_VM_FRONTEND_PORT=5173

# SSL/TLS Configuration (if using HTTPS)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem
